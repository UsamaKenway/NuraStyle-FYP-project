<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/bg_gradient">

    <LinearLayout android:id="@+id/detailsContaine" android:layout_width="match_parent"
        android:layout_height="wrap_content" android:orientation="vertical"
        android:layout_alignParentTop="true"

        android:layout_margin="40dp">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:weightSum="3">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="vertical" android:layout_weight="1"
                android:gravity="center" android:padding="8dp"
                android:background="#3CF1EBF1">

                <Space android:layout_width="wrap_content" android:layout_height="5dp"/>
                <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
                    android:textSize="12dp" android:text="PREVIEW "/>


                <ImageView
                    android:padding="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="350dp"
                    android:id="@+id/styleImageView"
                    android:scaleType="centerCrop"
                    android:src="@drawable/dog"


                    />


            </LinearLayout>
            <Space android:layout_width="10dp" android:layout_height="wrap_content"/>

            <Space android:layout_width="10dp" android:layout_height="wrap_content"/>

        </LinearLayout>

        <Space android:layout_width="wrap_content" android:layout_height="10dp"/>

        <!--        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"-->
        <!--            android:orientation="horizontal" android:weightSum="3">-->
        <!--            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"-->
        <!--                android:orientation="vertical" android:layout_weight="1"-->
        <!--                android:gravity="center" android:padding="8dp"-->
        <!--                android:background="#3CF1EBF1">-->


        <!--                <com.google.android.gms.common.SignInButton-->
        <!--                    android:layout_width="wrap_content"-->
        <!--                    android:layout_height="wrap_content"-->

        <!--                    android:backgroundTint="#795CAF"-->
        <!--                    android:textSize="11dp"-->
        <!--                    android:onClick="goToMaps"-->
        <!--                    android:id="@+id/googlebtn"-->

        <!--                    />-->
        <!--            </LinearLayout>-->
        <!--            <Space android:layout_width="10dp" android:layout_height="wrap_content"/>-->

        <!--        </LinearLayout>-->
        <Space android:layout_width="wrap_content" android:layout_height="10dp"/>


    </LinearLayout>



    <android.support.v7.widget.RecyclerView
        android:id="@+id/recyclerview"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        android:padding="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#3CF1EBF1"
        android:layout_above="@id/detailsContaine"
        />





    <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
        android:orientation="horizontal" android:weightSum="3"
        android:layout_below="@id/detailsContaine"
        >

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
            android:orientation="horizontal" android:weightSum="3">
            <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                android:orientation="horizontal" android:layout_weight="1"
                android:gravity="center" android:padding="8dp"
                android:background="#3CF1EBF1">

                <Space android:layout_width="wrap_content" android:layout_height="5dp"/>
                <!--                        <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"-->
                <!--                            android:textSize="12dp" android:text="Kindly Select Image and then Upload It."/>-->


                <Button
                    android:id="@+id/save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="SAVE"
                    android:backgroundTint="#795CAF"
                    android:textSize="11dp"
                    android:drawableTop="@drawable/uploadicon"
                    android:layout_marginRight="100dp"
                    />
                <Button
                    android:id="@+id/take"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Style IMG"
                    android:backgroundTint="#795CAF"
                    android:textSize="11dp"
                    android:drawableTop="@drawable/browsimg"
                    />
                <Button

                    android:id="@+id/pick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"

                    android:text="CONTENT IMG"
                    android:backgroundTint="#795CAF"
                    android:textSize="11dp"

                    android:drawableTop="@drawable/browsimg"
                    />
            </LinearLayout>
            <Space android:layout_width="10dp" android:layout_height="wrap_content"/>


        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
